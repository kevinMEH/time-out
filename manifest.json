{
    "name": "Time Out!",
    "description": "A Beautiful Website Blocking Extension",
    "version": "1.0",
    "manifest_version": 2,
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "html/options.html",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "html/blocked.html"
    ],
    "page_action": {
        "default_popup": "html/popup.html"
    }
}